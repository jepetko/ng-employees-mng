<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Ng Employees Mng" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Ng Employees Mng" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag 'angular/angular.min' %>
    <%= javascript_include_tag 'angular/angular-resource.min' %>
    <%= javascript_include_tag 'util/ng-scope-aware' %>
    <%= javascript_include_tag 'employees/EmployeesMng' %>
    <%= javascript_include_tag 'application' %>

    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <%= yield %>

      <div data-ng-app="ng-employees-mng" data-ng-controller="EmployeesCtrl">
        <div id="all">
          <table class="table table-hover">
            <caption>Employees</caption>
            <thead>
            <tr>
              <th>#</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Ranking</th>
            </tr>
            </thead>
            <tbody>
                <tr data-ng-repeat="e in employees">
                  <td scope="row">{{e.id}}</td>
                  <td>{{e.name}}</td>
                  <td>{{e.surname}}</td>
                  <td>{{e.ranking}}</td>
                  <td><button data-ng-click="get(e.id)">Get</button></td>
                </tr>
            </tbody>
          </table>
        </div>
        <div id="form" ng-include="template.url"></div>
      </div>
    </main>
  </body>
</html>
